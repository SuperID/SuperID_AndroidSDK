<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guideerthree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginTop="8dp" >

    <RelativeLayout
        android:id="@+id/rl_gr3top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/s_color_font_darkbule" >

        <TextView
            android:id="@+id/gr3_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="86dp"
            android:text=""
            android:textColor="@color/s_color_background_cell"
            android:textSize="@dimen/s_size_font_title" />

        <TextView
            android:id="@+id/gr3_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gr3_tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/superid_tips_guideerthree"
            android:textColor="@color/s_color_background_cell"
            android:textSize="@dimen/s_size_font_text" />

        <RelativeLayout
            android:id="@+id/guide_icontips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gr3_tv2"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/guide_iconlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:src="@drawable/superid_guideview_rebind_light_ico" />

            <TextView
                android:id="@+id/guide_tvlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/guide_iconlight"
                android:layout_alignTop="@+id/guide_iconlight"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/guide_iconlight"
                android:gravity="center_vertical"
                android:text="@string/superid_tips_guidelight"
                android:textColor="@color/s_color_background_cell"
                android:textSize="@dimen/s_size_font_text" />


            <ImageView
                android:id="@+id/guide_icondark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guide_line"
                android:layout_marginTop="12dp"
                android:src="@drawable/superid_guideview_rebind_dark_ico" />

            <TextView
                android:id="@+id/guide_tvdark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/guide_icondark"
                android:layout_alignTop="@+id/guide_icondark"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/guide_icondark"
                android:gravity="center_vertical"
                android:text="@string/superid_tips_guidedark"
                android:textColor="@color/s_color_background_cell"
                android:textSize="@dimen/s_size_font_text" />
            <View
                android:id="@+id/guide_line"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@id/guide_iconlight"
                android:layout_alignRight="@id/guide_tvdark"
                android:layout_below="@id/guide_iconlight"
                android:layout_marginTop="12dp"
                android:background="@color/s_color_background_cell" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/guide_icontips"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_gr3rebundle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/superid_text_selector"
                android:gravity="center"
                android:onClick="btn_gr3rebundle"
                android:text="@string/superid_action_rebundleface"
                android:textColor="@color/s_color_font_darkbule"
                android:textSize="@dimen/s_size_font_bar" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="@color/s_color_border" />

            <Button
                android:id="@+id/btn_gr3out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/superid_text_selector"
                android:gravity="center"
                android:onClick="btn_gr3out"
                android:text="@string/superid_action_exit"
                android:textColor="@color/s_color_font_darkbule"
                android:textSize="@dimen/s_size_font_bar" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rl_grtop"
        android:background="@android:color/transparent" />

</RelativeLayout>